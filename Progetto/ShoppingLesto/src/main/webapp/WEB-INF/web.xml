<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>smtp-hostname</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-port</param-name>
        <param-value>465</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-username</param-name>
        <param-value>onlygere@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-password</param-name>
        <param-value>wxosbrxukguhigey</param-value>
    </context-param>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>it.unitn.shoppinglesto.filters.SecurityFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RememberMeFilter</filter-name>
        <filter-class>it.unitn.shoppinglesto.filters.RememberMeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <servlet-name>RegistrationServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RememberMeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>it.unitn.shoppinglesto.servlet.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>it.unitn.shoppinglesto.servlet.authentication.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>it.unitn.shoppinglesto.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MailSenderServlet</servlet-name>
        <servlet-class>it.unitn.shoppinglesto.servlet.authentication.MailSenderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationServlet</servlet-name>
        <servlet-class>it.unitn.shoppinglesto.servlet.authentication.VerificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.unitn.shoppinglesto.servlet.authentication.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>it.unitn.shoppinglesto.servlet.authentication.LogoutServlet</servlet-class>
    </servlet>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.shoppinglesto.listeners.WebAppContextListener</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MailSenderServlet</servlet-name>
        <url-pattern>/sendRegistrationEmail.handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationServlet</servlet-name>
        <url-pattern>/verification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/WEB-INF/views/index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
